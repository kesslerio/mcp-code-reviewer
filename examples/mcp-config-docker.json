{
  "mcpServers": {
    "vibe-compass": {
      "command": "docker",
      "args": [
        "run", 
        "--rm", 
        "-p", "8000:8000",
        "-e", "GITHUB_TOKEN=${GITHUB_TOKEN}",
        "-e", "LOG_LEVEL=INFO",
        "vibe-compass-mcp"
      ],
      "env": {
        "GITHUB_TOKEN": "your_github_token_here"
      }
    }
  }
}